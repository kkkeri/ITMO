<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ru.itmo.model">

    <class name="MagicCity" table="magic_city">
        <!-- id -->
        <id name="id" column="id" type="long">
            <generator class="identity"/>
        </id>

        <property name="name" column="name" type="string" not-null="true" length="150"/>

        <property name="area" column="area" type="long" not-null="true"/>

        <property name="population" column="population" type="long" not-null="true"/>

        <property name="establishmentDate"
                  column="establishment_date"
                  type="org.hibernate.type.ZonedDateTimeType"
                  not-null="false"/>

        <!-- enum так же, как creatureType -->
        <property name="governor" column="governor" not-null="false" length="20">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.itmo.model.util.BookCreatureType</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <property name="capital" column="capital" type="boolean" not-null="true"/>

        <property name="populationDensity" column="population_density" type="double" not-null="true"/>
    </class>

</hibernate-mapping>
